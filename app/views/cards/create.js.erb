$("#flash_holder").html( "<%= j render( "shared/flash_messages" ) %>" );
$(".flash_msg").slideDown( "slow" )

<% unless @card.errors.size > 0 %>
	$("#card_content").val( "" );
	$("#new_cards").prepend( "<%= j render( @card ) %>" );
	$("#card_<%= @card.id %>").css( "display", "none" )
	$("#card_<%= @card.id %>").fadeIn( );
<% end %>


$("#card_<%= @card.id %> .rest-in-place").restInPlace( );
document.scale_card_content( );